{
  "ConnectionStrings": {
    "NotificationDb": "Host=localhost;Database=notifications;Username=postgres;Password=postgres"
  },
  "Notifications": {
    "OpsTeamUserId": "00000000-0000-0000-0000-000000000001"
  },
  "Jwt": {
    "SecretKey": "your-secret-key-min-32-characters-long-change-in-production",
    "Issuer": "NotificationService",
    "Audience": "NotificationServiceClients",
    "ExpirationMinutes": 60
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/antfarm",
    "Audience": "importpulse-web",
    "RequireHttpsMetadata": false
  },
  "Email": {
    "Provider": "MicrosoftGraph",
    "Smtp": {
      "Host": "localhost",
      "Port": 25,
      "Username": "",
      "Password": "",
      "EnableSsl": false,
      "FromEmail": "noreply@antfarmservices.com",
      "FromName": "Notification Service",
      "IsLocalDevServer": false
    },
    "MicrosoftGraph": {
      "SendFromAddress": "dexchange@antfarmservices.com"
    }
  },
  "Teams": {
    "WebhookUrl": ""
  },
  "Sms": {
    "Twilio": {
      "AccountSid": "",
      "AuthToken": "",
      "FromPhoneNumber": ""
    }
  },
  "Messaging": {
    "Transport": "InMemory"
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u3}] [{CorrelationId}] [{SagaId}] [{ClientId}] [{FileName}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/notification-service-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "shared": true,
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u3}] [{CorrelationId}] [{SagaId}] [{ClientId}] [{FileName}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*"
}
